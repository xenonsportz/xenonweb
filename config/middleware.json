{
    "static": {
        "module": {
            "arguments": ["path:./.build"]
        }
    },
    "devtools": {
        "enabled": true,
        "priority": 35,
        "module": {
            "name": "kraken-devtools",
            "arguments": [
                "path:./public",
                "path:./.build", {
                    "dust": {
                        "module": "kraken-devtools/plugins/dustjs",
                        "files": "/templates/**/*.js",
                        "base": "templates",
                        "i18n": "config:i18n"
                    },
                    "less": {
                        "module": "kraken-devtools/plugins/less",
                        "files": "/css/**/*.css"
                    },
                    "copier": {
                        "module": "kraken-devtools/plugins/copier",
                        "files": "**/*"
                    }
                }
            ]
        }
    },

    "auth": {
      "enabled": true,
      "module": "path:./middleware/passport"
    },

    "router": {
        "module": {
            "arguments": [{
                "directory": "path:./controllers"
            }]
        }
    }

}
